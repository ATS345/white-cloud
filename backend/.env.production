# 邮箱配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password

# 日志配置
LOG_LEVEL=info

# 健康检查配置
HEALTH_CHECK_INTERVAL=30000

# 安全配置
RATE_LIMIT_WINDOW=900000
